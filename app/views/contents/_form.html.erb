<%= simple_form_for @content do |f| %>
    <%= f.input :content_category_id, collection: @category, default: params[:content_category_id]%>
    <%= f.input :activity_id, collection: @activity, default: params[:activity_id]%>
    <%= f.input :user_id, collection: @user, default: current_user.id%>
    <%= f.input :data, input_html: { rows: '5'} %>
    <%= f.button :submit, input_html: { class: 'btn btn-primary'} %>
<% end %>
