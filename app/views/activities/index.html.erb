<h1>Listing activities</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @activities.each do |a| %>
  <tr>
    <td><%= a.activity_category.name %></td>
    <td><%= a.name %></td>
    <td><%= a.description %></td>
    <td><%= link_to 'Edit', edit_activity_path(a) %></td>
    <td><%= link_to 'Destroy', a, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

