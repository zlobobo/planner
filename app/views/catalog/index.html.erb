<div class="row-fluid">
  <div class="span3">
    <!-- Sidebar Holder -->
    <div class="well sidebar-nav">
      <ul><li class="nav-header">Categories</li></ul>
      <!-- Categories Holder -->
      <ul class="nav nav-list" id="categories_list">
        <li class="active_category"><a href="#" class="all">All</a></li>
        <% @cats.each do |c| %>
            <li><a href="#"><%= c.name %></a></li>
        <% end %>
      </ul>
      <!-- /Categories Holder -->
    </div>
    <!-- /Sidebar Holder -->
  </div>
  <div class="span9">
    <!-- Products Holder -->
    <ul id="products_container" class="thumbnails">
      <% @acts.each do |a| %>
          <li class="span3 product_item" style="margin-left: 10px;">
            <div class="thumbnail" style="height: 195px;">
                <div class="thumb_holder">
                    <a data-toggle="modal" href=#<%= a.id %>><img src="../images/temp.jpg"></a>
                </div>
                <div class="caption">
                  <div class="product_sum">
                    <h4><%= a.name %></h4>
                  </div>
                  <div class="product_details_modal modal hide fade" style="display: none;" aria-hidden="true" id=<%= a.id %>>
                    <div class="modal-header">
                      <a class="close" data-dismiss="modal">X</a>
                      <div class="caption">
                        <h3><%= a.name %></h3>
                      </div>
                    </div>
                    <div class="modal-body">
                      <p class="four">You can place your HTML CSS formatted content</p>
                    </div>
                    <div class="modal-footer"></div>
                  </div>
                  <p>
                    <a class="btn btn-warning" data-toggle="modal" href=#<%= a.id %>>
                      <i class="icon-zoom-in"></i>
                      View details
                    </a>
                  </p>
                </div>
            </div>
          </li>
      <% end %>
    </ul>
    <!-- /Products Holder -->
  </div>
</div>
<script type="text/javascript" src="../javascript/catalog.js"></script>
<script type="text/javascript" src="http://twitter.github.io/bootstrap/assets/js/bootstrap.js"></script>