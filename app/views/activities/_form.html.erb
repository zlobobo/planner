<%= simple_form_for @activity do |f| %>
    <%= f.input :activity_category_id, collection: @category, default: params[:activity_category_id]%>
    <%= f.input :name %>
    <%= f.input :description, input_html: { rows: '5'} %>
    <%= f.input :tag_list, label: 'Tags (separated by commas)' %>
    <%= f.button :submit, input_html: { class: 'btn btn-primary'} %>
<% end %>